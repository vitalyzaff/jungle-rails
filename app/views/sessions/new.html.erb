<center>
<h1>Login</h1>
<br>

<%= form_tag '/login' do %>
  
  <div class="form-group">
  <p>Email</p>
  <%= text_field_tag :email %>
  </div>

  <div class="form-group">
  <p>Password</p>
  <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Login", class: 'btn btn-primary' %>
  <div>
  <br>
  <p> No Account? Please, Register <%= link_to "HERE", "/signup" %> </p>
  </div>

<% end %>
</center>